<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BidovaniPoslovi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do sada niste postavili ni jedan posao. Postevite posao klikom na dugme u uglu!"
            android:textSize="30sp"
            android:id="@+id/porukaNemaMojihPoslova"
            android:visibility="gone"/>


        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/listaBidovanihPoslova"
            android:name="com.dobrimajstori.kucnimajstor.BidovaniPoslovi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MojiPoslovi"
            tools:listitem="@layout/bidovani_poslovi_kartica" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>