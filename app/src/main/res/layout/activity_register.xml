<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/background_login">








    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeRegister"
        >




    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#fff"
        android:layout_marginTop="140dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginHorizontal="30dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <lib.kingja.switchbutton.SwitchMultiButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/majstorPoslodavacSwitch"
                android:padding="8dp"
                app:strokeRadius="5dp"
                app:strokeWidth="1dp"
                app:selectedTab="0"
                app:selectedColor="@color/colorPrimary"
                android:layout_marginTop="15dp"
                app:switchTabs="@array/switch_tabs_skola"
                app:textSize="14sp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/inputTextIme">

                <EditText
                    android:id="@+id/editTextIme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ime"

                    android:inputType="textCapWords"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textInputPrezime">

                <EditText
                    android:id="@+id/editTextPrezime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:capitalize="words"
                    android:hint="Prezime"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    tools:capitalize="words" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:id="@+id/editTextMejl"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Å ifra"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:id="@+id/editTextSifra"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTextBrTelefina"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:hint="Broj telefona"
                    android:inputType="phone"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="@drawable/roundedbutton"
                android:text="REGISTRUJ SE"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:id="@+id/buttonSignup"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Imate nalog? Prijavite se ovde."
                android:layout_marginTop="-5dp"
                android:id="@+id/imaNalog"/>
        </LinearLayout>



        </ScrollView>


    </RelativeLayout>


    </RelativeLayout>





    <ImageButton
        android:id="@+id/user_profile_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/majstor_login"
        android:layout_above="@id/relativeRegister"
        android:layout_marginBottom="-200dp"
        android:elevation="4dp" />




</RelativeLayout>